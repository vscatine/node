<h1>Editar usuário - {{user.name}}</h1>
<form class="form" action="/users/edit/{{user.id}}" method="post">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome</label>
        <input type="text" name="name" value="{{user.name}}" required>
    </div>
    <div class="form-control">
        <label for="occupation">Profissão</label>
        <input type="text" name="occupation" value="{{user.occupation}}" required>
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" id="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter" id="newsletter">
        {{/if}}
        <label for="newsletter">Gostaria de receber nossa newsletter?</label>
    </div>
    <div class="form-control">
        <input class="btn" type="submit" value="Editar">
    </div>
</form>

<div class="address-container">
    <h2>Endereços</h2>
    <form action="/address/create/{{user.id}}" method="post">
        <input type="hidden" name="userId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" required>
        </div>
        <div class="form-control">
            <label for="number">Número</label>
            <input type="text" name="number" required>
        </div>
        <div class="form-control">
            <label for="city">Cidade</label>
            <input type="text" name="city" required>
        </div>
        <div class="form-control">
            <input class="btn" type="submit" value="Cadastrar">
        </div>
    </form>
    <div class="address-list">
        <h2>Lista de Endereços</h2>
        {{#each user.addresses}}
            <div>
                #{{this.id}} - 
                {{this.street}}, 
                {{this.number}} - 
                {{this.city}} 
                <form action="/address/delete/{{this.id}}" method="post">
                    <input type="hidden" name="userId" value="{{this.userId}}">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>
</div>
