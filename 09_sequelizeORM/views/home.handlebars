<h1>Usu√°rios cadastrados</h1>

<div class="container">
    {{#each users}}
        <div class="item">
            <h4>{{this.name}} </h4>
            <p> {{this.occupation}} </p>
            <div class="actions">
                <a href="/users/{{this.id}}" class="btn-details">Ver detalhes</a>
                <a href="/users/edit/{{this.id}}" class="btn-edit">Editar</a>
                <form action="/users/delete/{{this.id}}" method="post">
                    <input type="submit" value="Excluir" class="btn-delete">
                </form>
            </div>
        </div>
    {{/each}}
</div>
